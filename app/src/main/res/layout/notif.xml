<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:id="@+id/ambilnotif">

    <RelativeLayout android:gravity="center" android:background="#00000000" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal"
            android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:tag="com.android.systemui,com.suyonoion.viewpager.ganteng" android:onClick="MenujuViewpager"
            android:gravity="center"
            android:background="@drawable/bg_notif">
            <ImageView android:layout_width="50dip" android:layout_height="50dip" android:src="@drawable/suyono"
                android:contentDescription="@string/author" />
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="20dip"
                android:background="#d8229e06">

                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView android:textAppearance="?android:textAppearanceMedium" android:textSize="14.0sp" android:textColor="#fffdff1d" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/notiftxt1"
                        android:textStyle="bold|italic" />
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView android:textAppearance="?android:textAppearanceSmall" android:textSize="12.0sp" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/notiftxt2" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <TextView
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textSize="12.0sp"
                        android:textColor="#ffffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notiftxt3"
                        android:id="@+id/textView" />

                    <ImageView
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:src="@drawable/seneng"
                        android:contentDescription="@string/notiftxt2" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>